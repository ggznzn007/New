<Window x:Class="_45_WPF_SnakeBiteGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_45_WPF_SnakeBiteGame"
        mc:Ignorable="d"
        Title="SnakeBite" Height="350" Width="525" Background="Black">
    <Grid>
        <TextBlock Margin="20,20" Background="Black">SnakeBite</TextBlock>
        <TextBlock Margin="20,35">Eat 25 to pause while playing</TextBlock>
        <TextBlock Margin="20,50">Press ESC to pause while playing</TextBlock>
        <Button Content="Play" Name="btn1" Width="100" Height="40"
                HorizontalAlignment="Left" Margin="120,200,0,0" FontSize="20"
                Click="btn1_Click"/>
        <Button Content="Quit" Name="btn2" Width="100" Height="40"
                HorizontalAlignment="Left" Margin="300,200,0,0" FontSize="20"
                Click="btn2_Click"/>
    </Grid>
</Window>
